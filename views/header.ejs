    <!--Adding Result Alert-->
    <section class="Adding_result">
      <div class="successPopup_container px-3 py-2 gap-2 d-flex text-center rounded shadow hide">
        <p class="my-0">Book added successfully!</p>
        <i id="successIcon" class="fa-solid fa-circle-check"></i>
      </div>
  
      <div class="failPopup_container px-3 py-2 gap-2 d-flex text-center rounded shadow hide">
        <p class="my-0">Error adding book!</p>
        <i id="failIcon" class="fa-solid fa-circle-exclamation"></i>
      </div>
  
      <div class="alreadyPopup_container px-3 py-2 gap-2 d-flex text-center rounded shadow hide">
        <p class="my-0">Book already exists!</p>
        <i id="failIcon" class="fa-solid fa-circle-exclamation"></i>
      </div>
    </section>

  